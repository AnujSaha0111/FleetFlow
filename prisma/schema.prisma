generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- USERS & RBAC ---
// Roles defined in FleetFlow docs
enum Role {
  MANAGER
  DISPATCHER
  SAFETY_OFFICER
  FINANCIAL_ANALYST
}

model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique // Links to Clerk Auth
  email       String   @unique
  name        String?
  role        Role     @default(DISPATCHER) // Default role
  createdAt   DateTime @default(now())
}

// --- VEHICLE REGISTRY ---
enum VehicleStatus {
  AVAILABLE
  ON_TRIP
  IN_SHOP
  OUT_OF_SERVICE
}

model Vehicle {
  id              String        @id @default(uuid())
  name            String        // Name/Model
  licensePlate    String        @unique // Unique ID
  maxLoadCapacity Float         // in kg/tons
  odometer        Float         @default(0) // Odometer reading
  status          VehicleStatus @default(AVAILABLE)
  
  // Relations
  trips           Trip[]
  maintenanceLogs MaintenanceLog[]
  fuelLogs        FuelLog[]

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

// --- DRIVER PROFILES ---
enum DriverStatus {
  ON_DUTY
  OFF_DUTY
  SUSPENDED
}

model Driver {
  id              String       @id @default(uuid())
  name            String
  licenseExpiry   DateTime     // Compliance tracking
  safetyScore     Float        @default(100.0) // Performance
  status          DriverStatus @default(ON_DUTY)
  
  // Relations
  trips           Trip[]

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

// --- TRIP DISPATCHER ---
enum TripStatus {
  DRAFT
  DISPATCHED
  COMPLETED
  CANCELLED
}

model Trip {
  id              String     @id @default(uuid())
  cargoWeight     Float      // Must be validated against vehicle capacity
  status          TripStatus @default(DRAFT)
  
  // Relations
  vehicleId       String
  vehicle         Vehicle    @relation(fields: [vehicleId], references: [id])
  
  driverId        String
  driver          Driver     @relation(fields: [driverId], references: [id])
  
  fuelLogs        FuelLog[]  // Fuel logged specifically during this trip

  createdAt       DateTime   @default(now())
  completedAt     DateTime?
}

// --- MAINTENANCE & SERVICE LOGS ---
model MaintenanceLog {
  id          String   @id @default(uuid())
  description String
  cost        Float
  date        DateTime @default(now())

  // Relations
  vehicleId   String
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
}

// --- EXPENSE & FUEL LOGS ---
model FuelLog {
  id          String   @id @default(uuid())
  liters      Float
  cost        Float
  date        DateTime @default(now())

  // Relations
  vehicleId   String
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])

  tripId      String?  // Optional: Can tie fuel to a specific trip
  trip        Trip?    @relation(fields: [tripId], references: [id])
}